# Crossmint Configuration (required for wallet creation and topup)
NEXT_PUBLIC_CROSSMINT_CLIENT_API_KEY=your_crossmint_client_api_key_here

# Crossmint Server API Key (for balance checks and server-side operations)
CROSSMINT_API_KEY=your_crossmint_server_api_key_here

# Chain Configuration (you can change this as per your requirements.)
NEXT_PUBLIC_CHAIN_ID=base-sepolia
NEXT_PUBLIC_USDC_MINT=0x036CbD53842c5426634e7929541eC2318f3dCF7e

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Bot Integration (for wallet creation notifications)
# These URLs should point to your BOT server ngrok tunnel (port 3000)
BOT_WEBHOOK_URL=https://your-bot-ngrok-url-here/api/webhook/wallet-created
NEXT_PUBLIC_BOT_API_URL=https://your-bot-ngrok-url-here

# Next.js Configuration
NEXTAUTH_SECRET=your_random_secret_here
# This URL should point to your WEB INTERFACE ngrok tunnel (port 3001)
NEXTAUTH_URL=https://your-web-interface-ngrok-url-here
NODE_ENV=development